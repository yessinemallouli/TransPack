<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/rad"
    tools:context=".activity_shared">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:transitionName="ImageTransition"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/logo1"
            tools:ignore="ContentDescription">

        </ImageView>

    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="TransPack"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/text2"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Fast, Faster, Fastest!"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp"
        android:background="@drawable/roadtrips_social"
        android:layout_margin="7dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/pp"
        android:background="@drawable/roadtrips_social"

        >

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER AS A :"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="30dp"

            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"

            ></TextView>
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="115dp"
            android:paddingLeft="115dp"
            android:paddingTop="20dp"
            android:textColor="#FF47A04B"

            android:paddingBottom="20dp"
            android:text="CUSTOMER"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"
            android:layout_gravity="center_horizontal"
            ></Button>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="100dp"
            android:paddingLeft="100dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="TRANSPORTER"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_button9"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            ></Button>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>