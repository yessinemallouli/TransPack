<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="7dp"
    android:elevation="90dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#FFFF809F"
            android:orientation="horizontal"
            android:scaleType="centerCrop"
            >
            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/trunkleft"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/truck1" />
                <TextView
                    android:id="@+id/textViewDP"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departure Place"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    />
                <TextView
                    android:id="@+id/textViewDD"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departure Date"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="110dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/trunkright"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/truck2"
                    />
                <TextView
                    android:id="@+id/textViewAP"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrival Place"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    />
                <TextView
                    android:id="@+id/textViewAD"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrival Date"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/textViewP"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinar Per Kilos" />
            <TextView
                android:textSize="20dp"
android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DT/Kilos"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewTN"
            android:textColor="#FF809F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Transporter Name"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/textViewTP"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Phone Number" />

    </LinearLayout>


</androidx.cardview.widget.CardView>